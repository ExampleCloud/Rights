@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="image/x-icon" rel="shortcut icon" href="~/Content/images/favicon.ico" />
    @Styles.Render("~/Content/easyui/bootstrap")
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/bundles/common")
    <title>菜单列表</title>
</head>
<body>
    <div id="ui_menu_layout" class="easyui-layout" data-options="fit:true,border:false">
        <div data-options="region:'center',border:false, title:'菜单列表'">
            <table id="ui_menu_tg" data-options="fit:true,border:false"></table>
        </div>
    </div>
    @if (false)
    {
        <script type="text/javascript" src="~/Scripts/jquery-1.8.2.js"></script>
    }

    <script type="text/javascript">
        $(function () {
            //默认加载所有菜单
            GetAllMenus();
        });

        //获取所有菜单
        function GetAllMenus() {
            $.ajax({
                url: '@Url.Action("GetButtonsByUserIdAndMenuCode", "Organization")',
                type: "POST",
                dataType: "json",
                data: { "menuCode": "menu", "pageName": "menu" },
                timeout: 5000,
                success: function (data) {
                    if (data.success) {
                        var oldSelectDeptId;
                        var toolbar = getToolBar(data);
                        if (data.browser) {
                            $("#ui_menu_tg").treegrid({
                                url: '@Url.Action("GetAll", "Menu")',
                                idField: 'id',
                                treeField: 'text',
                                rownumbers: true,
                                columns: [[
                                       { field: 'text', title: '菜单名称', width: 150 },
                                       { field: 'ParentId', title: '上级菜单id', sortable: true, width: 80 },
                                       { field: 'Code', title: '菜单编码', width: 120 },
                                       { field: 'Url', title: '链接地址', width: 250 },
                                       { field: 'Icon', title: '图标', width: 150 },
                                       { field: 'Sort', title: '排序', sortable: true, width: 80 },
                                       { field: 'CreatedTime', title: '创建时间', width: 150 },
                                       { field: 'LastUpdatedTime', title: '上次更新时间', width: 150 }
                                ]],
                                toolbar: toolbar.length == 0 ? null : toolbar
                            });
                        }
                        else {
                            $.show_warning("提示", "无权限，请联系管理员！");
                        }
                    } else {
                        $.show_warning("错误", data.result);
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    if (textStatus == "timeout") {
                        $.show_warning("提示", "请求超时，请刷新当前页重试！");
                    }
                    else {
                        $.show_warning("错误", textStatus + "：" + errorThrown);
                    }
                }
            })
        };

        var orgIds = "";
        function recursionGetIds(rows) {
            if (rows.children != undefined) {
                $.each(rows.children, function (i, row) {
                    orgIds += row.id + ",";
                    recursionGetIds(row);
                });
            }
        }

        //添加菜单
        function menu_add() {
            $("<div/>").dialog({
                id: "ui_menu_add_dialog",
                href: '@Url.Action("Add", "Menu")',
                title: "添加菜单",
                height: 350,
                width: 460,
                modal: true,
                buttons: [{
                    id: "ui_menu_add_btn",
                    text: '添 加',
                    handler: function () {
                        $("#ui_menu_addform").form("submit", {
                            url: '@Url.Action("Add", "Menu")',
                            onSubmit: function (param) {
                                $('#ui_menu_add_btn').linkbutton('disable');
                                if ($(this).form('validate')) {
                                    var t = $("#ComboParentMenu").combotree('tree');
                                    var node = t.tree('getSelected');
                                    param.ParentId = node.id;
                                    return true;
                                }
                                else {
                                    $('#ui_menu_add_btn').linkbutton('enable');
                                    return false;
                                }
                            },
                            success: function (data) {
                                var dataJson = eval('(' + data + ')');
                                if (dataJson.success) {
                                    $("#ui_menu_add_dialog").dialog('destroy');
                                    $.show_warning("提示", dataJson.msg);
                                    $("#ui_menu_tg").treegrid("reload").treegrid('clearSelections').treegrid('clearChecked');//刷新并清除已选择
                                } else {
                                    $('#ui_menu_add_btn').linkbutton('enable');
                                    $.show_warning("提示", dataJson.msg);
                                }
                            }
                        });
                    }
                }],
                onLoad: function () {
                    $("#Name").focus();
                },
                onClose: function () {
                    $("#ui_menu_add_dialog").dialog('destroy');
                }
            });
        };

        //修改菜单
        function menu_edit() {
            var row = $("#ui_menu_tg").treegrid("getSelected");
            if (!row) {
                $.show_warning("提示", "请先选择要修改的机构!");
                return;
            }
            $("<div/>").dialog({
                id: "ui_org_edit_dialog",
                href: '@Url.Action("Edit", "Organization")',
                title: "修改机构",
                height: 350,
                width: 460,
                modal: true,
                buttons: [{
                    id: "ui_org_edit_btn",
                    text: '修 改',
                    handler: function () {
                        $("#ui_org_editform").form("submit", {
                            url: '@Url.Action("Edit", "Organization")',
                            onSubmit: function (param) {
                                $('#ui_org_edit_btn').linkbutton('disable');
                                if ($(this).form('validate')) {
                                    var t = $("#comboParent").combotree('tree');
                                    var node = t.tree('getSelected');
                                    param.ParentId = node.id;
                                    return true;
                                }
                                else {
                                    $('#ui_org_edit_btn').linkbutton('enable');
                                    return false;
                                }
                            },
                            success: function (data) {
                                var dataJson = eval('(' + data + ')');
                                if (dataJson.success) {
                                    $("#ui_org_edit_dialog").dialog('destroy');
                                    $.show_warning("提示", dataJson.msg);
                                    $("#ui_menu_tg").treegrid("reload");
                                } else {
                                    $('#ui_org_edit_btn').linkbutton('enable');
                                    $.show_warning("提示", dataJson.msg);
                                }
                            }
                        });
                    }
                }],
                onLoad: function () {
                    $("#id").val(row.id);
                    $("#Name").val(row.text);
                    $('#Sort').numberspinner('setValue', row.Sort);
                    $("#comboParent").combotree('setValue', row.ParentId);
                },
                onClose: function () {
                    $("#ui_org_edit_dialog").dialog('destroy');
                }
            });
        }

        //删除菜单
        function menu_delete() {
            var row = $("#ui_menu_tg").datagrid("getSelected");
            if (!row) {
                $.show_warning("提示", "请先勾选要删除的机构");
                return;
            }
            $.messager.confirm('提示', '确定删除：' + row.text + '？如果有子机构也会同时删除！', function (r) {
                if (r) {
                    orgIds = "";
                    recursionGetIds(row);
                    $.ajax({
                        url: '@Url.Action("Delete", "Organization")',
                        data: { "deleteOrgIds": row.id +","+ orgIds },
                        type: "POST",
                        dataType: "JSON",
                        success: function (data) {
                            if (data.success) {
                                $.show_warning("提示", data.msg);
                                $("#ui_menu_tg").treegrid("reload");
                                if ($('#tabs').tabs('exists', '组织机构')) {
                                    $('#tabs').tabs('getTab', '组织机构').panel('refresh');
                                }
                                //$("#ui_menu_layout").layout("collapse", "east");
                            } else {
                                $.show_warning("提示", data.msg);
                            }
                        }
                    });
                }
            });
        };

        //全部展开
        function menu_expandall() {
            $("#ui_menu_tg").treegrid("expandAll");
        };

        //全部折叠
        function menu_collapseall() {
            $("#ui_menu_tg").treegrid("collapseAll");
        };

    </script>

</body>
</html>