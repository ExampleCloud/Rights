@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="image/x-icon" rel="shortcut icon" href="~/Content/images/favicon.ico" />
    @Styles.Render("~/Content/easyui/bootstrap")
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/bundles/common")
    <title>用户管理</title>
</head>
<body>
    <div id="ui_org_layout" class="easyui-layout" data-options="fit:true,border:false">
        <div data-options="region:'west',split:true,title:'组织机构'" style="width: 200px; padding: 10px;">
            <div>
                <ul id="treeOrg"></ul>
            </div>
        </div>
        <div data-options="region:'center',border:false, title:'用户列表'">
            <table id="ui_user_dg" data-options="fit:true,border:false"></table>
        </div>
    </div>
    @if (false)
    {
        <script type="text/javascript" src="~/Scripts/jquery-1.8.2.js"></script>
    }

    <script type="text/javascript">
        $(function () {
            $('#treeOrg').tree({
                method: 'POST',
                url: '@Url.Action("GetTreeOrgData", "Organization")',
                lines: true,
                onClick: function (node) {
                    var centerPanel = $("#ui_org_layout").layout("panel", "center");
                    centerPanel.panel("setTitle", "用户列表 - " + node.text);
                    GetUserByOrgId(node.id);
                }
            });

            //默认加载所有机构的所有用户
            GetUserByOrgId(0);
        });

        //获取指定机构下(包括子机构)的所有用户
        function GetUserByOrgId(orgId) {
            $.ajax({
                url: '@Url.Action("GetButtonsByUserIdAndMenuCode", "Organization")',
                type: "POST",
                dataType: "json",
                data: { "menuCode": "user", "pageName": "user" },
                timeout: 5000,
                success: function (data) {
                    if (data.success) {
                        var oldSelectDeptId;
                        var toolbar = getToolBar(data);
                        if (data.browser) {
                            $("#ui_user_dg").datagrid({
                                url: '@Url.Action("GetPagingUsers", "User")' + "?orgId=" + orgId,
                                striped: true,
                                rownumbers: true,
                                pagination: true,
                                pageSize: 10,
                                idField: 'id',
                                sortName: 'CreatedTime',
                                sortOrder: 'desc',
                                pageList: [10, 20, 40, 60, 80, 100],
                                frozenColumns: [[
                                                 { field: 'ck', checkbox: true },
                                                 {
                                                     width: 100,
                                                     title: '登录id',
                                                     field: 'UserId',
                                                     sortable: true,
                                                     formatter: function (value, row, index) {
                                                         return value.length > 8 ? '<span title="' + value + '">' + value + '</span>' : value;
                                                     }
                                                 }, {
                                                     width: 80,
                                                     title: '用户名',
                                                     field: 'UserName',
                                                     sortable: true,
                                                     formatter: function (value, row, index) {
                                                         return value.length > 5 ? '<span title="' + value + '">' + value + '</span>' : value;
                                                     }
                                                 }]],
                                columns: [[
                                           //{
                                           //    field: 'UserRole',
                                           //    title: '角色',
                                           //    width: 180,
                                           //    formatter: function (value, row, index) {
                                           //        return value.length > 12 ? '<span title="' + value + '">' + value + '</span>' : value;
                                           //    }
                                           //},
                                           {
                                               field: 'EnableFlag',
                                               title: '启用',
                                               sortable: true,
                                               width: 60,
                                               align: 'center',
                                               formatter: function (value, row, index) {
                                                   return value ? '<img src="@Url.Content("~/Content/easyui/icon/chk_checked.gif")" alt="已启用" title="用户已启用" />' : '<img src="@Url.Content("~/Content/easyui/icon/chk_unchecked.gif")" alt="未启用" title="用户未启用" />';
                                               }
                                           },
                                           {
                                               field: 'IsChangePwd',
                                               title: '改密',
                                               sortable: true,
                                               width: 60,
                                               align: 'center',
                                               formatter: function (value, row, index) {
                                                   return value ? '<img src="@Url.Content("~/Content/easyui/icon/chk_checked.gif")" alt="已改密" title="用户已改密" />' : '<img src="@Url.Content("~/Content/easyui/icon/chk_unchecked.gif")" alt="未改密" title="用户未改密" />';
                                               }
                                           },
                                           {
                                               field: 'CreatedTime',
                                               title: '创建时间',
                                               sortable: true,
                                               width: 130
                                           }
                                ]],
                                toolbar: toolbar.length == 0 ? null : toolbar,
                                onDblClickRow: function (rowIndex, rowData) {
                                    $("#ui_user_dg").datagrid('clearSelections').datagrid('clearChecked').datagrid('checkRow', rowIndex);
                                    user_edit();
                                }
                            });
                        }
                        else {
                            $.show_warning("提示", "无权限，请联系管理员！");
                        }
                    } else {
                        $.show_warning("错误", data.result);
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    if (textStatus == "timeout") {
                        $.show_warning("提示", "请求超时，请刷新当前页重试！");
                    }
                    else {
                        $.show_warning("错误", textStatus + "：" + errorThrown);
                    }
                }
            })
        };

        var orgIds = "";
        function recursionGetIds(rows) {
            if (rows.children != undefined) {
                $.each(rows.children, function (i, row) {
                    orgIds += row.id + ",";
                    recursionGetIds(row);
                });
            }
        }

        //添加用户
        function user_add() {
            $("<div/>").dialog({
                id: "ui_org_add_dialog",
                href: '@Url.Action("Add", "User")',
                title: "添加机构",
                height: 350,
                width: 460,
                modal: true,
                buttons: [{
                    id: "ui_org_add_btn",
                    text: '添 加',
                    handler: function () {
                        $("#ui_org_addform").form("submit", {
                            url: '@Url.Action("Add", "User")',
                            onSubmit: function (param) {
                                $('#ui_org_add_btn').linkbutton('disable');
                                if ($(this).form('validate')) {
                                    var t = $("#comboParent").combotree('tree');
                                    var node = t.tree('getSelected');
                                    param.ParentId = node.id;
                                    return true;
                                }
                                else {
                                    $('#ui_org_add_btn').linkbutton('enable');
                                    return false;
                                }
                            },
                            success: function (data) {
                                var dataJson = eval('(' + data + ')');
                                if (dataJson.success) {
                                    $("#ui_org_add_dialog").dialog('destroy');
                                    $.show_warning("提示", dataJson.msg);
                                    //$("#ui_org_tg").treegrid("reload");
                                } else {
                                    $('#ui_org_add_btn').linkbutton('enable');
                                    $.show_warning("提示", dataJson.msg);
                                }
                            }
                        });
                    }
                }],
                onLoad: function () {
                    $("#Name").focus();
                },
                onClose: function () {
                    $("#ui_org_add_dialog").dialog('destroy');
                }
            });
        };

        //修改用户
        function user_edit() {
            //var row = $("#ui_org_tg").treegrid("getSelected");
            if (!row) {
                $.show_warning("提示", "请先选择要修改的机构!");
                return;
            }
            $("<div/>").dialog({
                id: "ui_org_edit_dialog",
                href: '@Url.Action("Edit", "User")',
                title: "修改机构",
                height: 350,
                width: 460,
                modal: true,
                buttons: [{
                    id: "ui_org_edit_btn",
                    text: '修 改',
                    handler: function () {
                        $("#ui_org_editform").form("submit", {
                            url: '@Url.Action("Edit", "User")',
                            onSubmit: function (param) {
                                $('#ui_org_edit_btn').linkbutton('disable');
                                if ($(this).form('validate')) {
                                    var t = $("#comboParent").combotree('tree');
                                    var node = t.tree('getSelected');
                                    param.ParentId = node.id;
                                    return true;
                                }
                                else {
                                    $('#ui_org_edit_btn').linkbutton('enable');
                                    return false;
                                }
                            },
                            success: function (data) {
                                var dataJson = eval('(' + data + ')');
                                if (dataJson.success) {
                                    $("#ui_org_edit_dialog").dialog('destroy');
                                    $.show_warning("提示", dataJson.msg);
                                    //$("#ui_org_tg").treegrid("reload");
                                } else {
                                    $('#ui_org_edit_btn').linkbutton('enable');
                                    $.show_warning("提示", dataJson.msg);
                                }
                            }
                        });
                    }
                }],
                onLoad: function () {
                    $("#id").val(row.id);
                    $("#Name").val(row.text);
                    $('#Sort').numberspinner('setValue', row.Sort);
                    $("#comboParent").combotree('setValue', row.ParentId);
                },
                onClose: function () {
                    $("#ui_org_edit_dialog").dialog('destroy');
                }
            });
        }

        //删除用户
        function user_delete() {
            //var row = $("#ui_org_tg").datagrid("getSelected");
            if (!row) {
                $.show_warning("提示", "请先勾选要删除的机构");
                return;
            }
            $.messager.confirm('提示', '确定删除：' + row.text + '？如果有子机构也会同时删除！', function (r) {
                if (r) {
                    orgIds = "";
                    recursionGetIds(row);
                    $.ajax({
                        url: '@Url.Action("Delete", "User")',
                        data: { "deleteOrgIds": row.id +","+ orgIds },
                        type: "POST",
                        dataType: "JSON",
                        success: function (data) {
                            if (data.success) {
                                $.show_warning("提示", data.msg);
                                //$("#ui_org_tg").treegrid("reload");
                                if ($('#tabs').tabs('exists', '组织机构')) {
                                    $('#tabs').tabs('getTab', '组织机构').panel('refresh');
                                }
                                //$("#ui_org_layout").layout("collapse", "east");
                            } else {
                                $.show_warning("提示", data.msg);
                            }
                        }
                    });
                }
            });
        };
    </script>

</body>
</html>